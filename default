#Force HTTPS
server {
    if ($host = nrichman.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    listen 80;
    server_name nrichman.dev;
    return 404; # managed by Certbot
}
server {
    if ($host = dashboard.nrichman.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name dashboard.nrichman.dev;
    listen 80;
    return 404; # managed by Certbot
}
server {
    if ($host = git.nrichman.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name git.nrichman.dev;
    listen 80;
    return 404; # managed by Certbot
}
server {
    if ($host = storage.nrichman.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name storage.nrichman.dev;
    listen 80;
    return 404; # managed by Certbot
}
server {
    if ($host = transmission.nrichman.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    server_name transmission.nrichman.dev;
    listen 80;
    return 404; # managed by Certbot
}
